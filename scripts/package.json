{
  "name": "build-universal-orbit-components",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "postinstall": "yarn build",
    "build": "rimraf ../lib && yarn build:copy:web && yarn build:copy:native && yarn build:copy:flow && yarn build:copy:index && yarn build:lib",
    "build:copy:web": "copyfiles -u 2 '../src/**/*.js' '../src/**/*.json' -e '../src/**/*.stories.js' -e '../src/**/__tests__/**' -e '../src/**/*.native.js' -e '../src/**/*.ios.js' -e '../src/**/*.android.js' ../lib/web",
    "build:copy:native": "copyfiles -u 2 '../src/**/*.js' '../src/**/*.json' -e '../src/**/*.stories.js' -e '../src/**/__tests__/**' -e '../src/**/**.web.js' ../lib/native",
    "build:copy:flow": "flow-copy-source -i '**/*.stories.js' -i '**/*.test.js' -i '**/*.native.js' -i '**/*.android.js' -i '**/*.ios.js' ../src ../lib/web",
    "build:copy:index": "copyfiles -u 1 ./templates/**.js ../lib",
    "build:lib": "babel --out-dir ../lib/web ../lib/web --plugins=babel-plugin-react-native-web,@babel/plugin-proposal-class-properties,@babel/plugin-proposal-nullish-coalescing-operator --presets=@babel/react,@babel/flow"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "babel-plugin-react-native-web": "^0.9.9",
    "copyfiles": "^2.1.0",
    "flow-copy-source": "^2.0.2",
    "metro-react-native-babel-preset": "^0.50.0",
    "rimraf": "^2.6.2"
  }
}
